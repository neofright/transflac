case $BASH_SOURCE in
	$0	)
		printf "%s\nScript must be invoked via source command\nExiting\n"
		exit;;
esac

until [[ $valid_codec == "YES" ]]; do

	case "${output_codec^^}" in
		OPUS|OGG|AAC|MP3	)
			valid_codec="YES"
			printf "${GREEN}%s${YELLOW}%s${GREEN}%s\n${RESTORE}\n" "Transcoding " "$input_base_dir " "from FLAC to ${output_codec^^}";;
		QUIT	)
			printf "${RED}%s\n${RESTORE}\n" "Exiting.  You entered quit."
			exit;;
		*	)
			printf "${GREEN}%s\n" "Please enter desired output CODEC"
#			if rpm -q "ffmpegx" | grep "not installed" > /dev/null
if [[ "$(rpm -q ffmpeg)" =~ "not installed" ]]
			then
				printf "${YELLOW}%s${CYAN}\n" "Supported:  OPUS | OGG"
			else
				printf "${YELLOW}%s${CYAN}\n" "Supported:  OPUS | OGG | AAC | MP3"
			fi
			read -p "[ENTER]:  " output_codec
			printf "${RESTORE}\n";;
	esac

done

return
